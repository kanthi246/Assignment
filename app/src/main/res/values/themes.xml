    </style>

    <style name="textviewextralargeBlack">
        <item name="android:textSize">@dimen/textsizelargex</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textviewSmallWhite">
        <item name="android:textSize">@dimen/textsizesmall</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textviewMediumWhite">
        <item name="android:textSize">@dimen/textsizemedium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textviewlargeWhite">
        <item name="android:textSize">@dimen/textsizelarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textviewlargexWhite">
